{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <h1>user/index</h1>

    <a href="{{ path('app_user_new') }}" class="app-user-index-btn-new">{{ 'create'|trans }}</a>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>


        {% for user in pagination %}

            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_user_show', {user: user.id}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('app_user_edit', {user: user.id}) }}">{{ 'edit'|trans }}</a>
                    <a href="{{ path('app_user_delete', {user: user.id  }) }}">{{ 'delete'|trans }}</a>
                </td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
