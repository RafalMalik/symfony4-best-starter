{% extends 'base.html.twig' %}

{% block title %}user/index{% endblock %}

{% block body %}

    <h3>user/index</h3>
    <a href="{{ path('app_user_new') }}" class="btn btn-success app-btn-new">{{ 'create'|trans }}</a>

    <table class="table table-hover mt-3">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>

        {% for user in pagination %}

            <tr class="table-row">
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_user_show', {user: user.id}) }}" class="btn btn-info">
                        {{ 'show'|trans }}
                    </a>
                    <a href="{{ path('app_user_edit', {user: user.id}) }}" class="btn btn-warning">
                        {{ 'edit'|trans }}
                    </a>
                    <a href="{{ path('app_user_delete', {user: user.id  }) }}" class="btn btn-danger">
                        {{ 'delete'|trans }}
                    </a>
                </td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
